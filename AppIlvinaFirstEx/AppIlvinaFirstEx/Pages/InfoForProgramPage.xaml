<Page x:Class="AppIlvinaFirstEx.Pages.InfoForProgramPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppIlvinaFirstEx.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InfoForProgramPage">

    <Grid>
        <StackPanel Orientation="Horizontal"
                    Margin="150"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label x:Name="nameLbl"
                   Margin="3"
                   Content="{Binding Name}"
                   TextBlock.Foreground="{Binding Color}"
                   Height="40"></Label>
            <Label x:Name="infoLbl"
                   Margin="3"
                   Content="{Binding Info}"
                   Height="40"></Label>
            <Button x:Name="closeBtn"
                    Width="100"
                    Height="30"
                    Margin="3"
                    Click="closeBtn_Click">
                Закрыть
            </Button>
        </StackPanel>
    </Grid>
</Page>
